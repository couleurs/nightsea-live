{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "taskName": "cmake",
            "args": ["cmake ../proj/cmake"]     
        },
        {
            "taskName": "cmake clean",
            "args": ["cd .. && rm -rf build && mkdir build"]     
        },
        {
            "taskName": "Build",
            "args": ["make -j4"],          
        },
        {
            "taskName": "Build & Run",
            "args": ["make -j4 && make run"],
            "isBuildCommand": true            
        },
        {
            "taskName": "Run",
            "args": ["make run"]
        }
    ]
}